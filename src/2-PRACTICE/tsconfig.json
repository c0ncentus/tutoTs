{
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES2020",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "declaration": true,
    "composite": true,
    "diagnostics": false
  },
  "exclude": ["temp", "coverage", "dist", "package/**/dist/**/*"]
}