{
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES2020",
    "lib": [
      "ES2017", "ES2019", "ES2020", "ES2015", "ES2016","ES2018", "ES2021", "ES2022" 
    ],
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "declaration": true,
    "composite": true,
    "diagnostics": false
  },
  "exclude": ["temp", "coverage", "dist"],
  "include": ["src"]
}